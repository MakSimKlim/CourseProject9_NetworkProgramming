<Window x:Class="client4.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client4"
        mc:Ignorable="d"
        Title="Simple Messanger" Height="800" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Большое поле для вывода чата -->
        <TextBox x:Name="ChatOutput" Grid.Row="0" Margin="5" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <!-- Панель для ввода текста и кнопки "Отправить" -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Поле для ввода текста -->
            <TextBox x:Name="ChatInput" Grid.Column="0" Margin="2"/>

            <!-- Кнопка "Отправить" -->
            <Button x:Name="SendButton" Grid.Column="1" Content="Отправить" Click="SendButton_Click" />
        </Grid>
    </Grid>
</Window>